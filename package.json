{
  "name": "monad-functor-perceptron",
  "version": "1.0.0",
  "description": "Geometric Consensus Protocol using Universal Quadratic Forms - RFC XXXX Implementation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --format=esm --outfile=dist/browser.js --target=es2020",
    "build:dev": "tsc --watch",
    "build:prod": "tsc && esbuild src/index.ts --bundle --format=esm --outfile=dist/browser.min.js --minify --target=es2020",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "dev": "concurrently \"npm run build:dev\" \"npm run test:watch\"",
    "clean": "rm -rf dist coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docs": "typedoc src/index.ts --out docs/api",
    "examples": "node --loader ts-node/esm src/examples/basic-consensus.ts"
  },
  "keywords": [
    "consensus",
    "geometric",
    "quadratic-forms",
    "ramanujan",
    "hilbert-space",
    "fano-plane",
    "distributed-systems",
    "blockchain",
    "p2p"
  ],
  "author": "Geometric Consensus Protocol Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.0",
    "eslint": "^8.54.0",
    "ts-node": "^10.9.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "crypto-js": "^4.2.0"
  },
  "files": [
    "dist/",
    "src/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "import": "./dist/browser.js"
    }
  }
}
